<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CursoDetallesInformacion">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_darkblue"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">

                <TextView
                    style="@style/styleTxtViewTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Curso" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/previous" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:src="@drawable/background_middleblue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <TextView
                    style="@style/styleTxtViewTituloCurso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso de C# .NET desde cero hasta lo mas avanzado full stack"/>


            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF">

                        <LinearLayout
                            android:id="@+id/btnModificarCurso"
                            android:layout_width="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_darkerblue"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_marginStart="30dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/write"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                style="@style/styleTxtViewBotonesCurso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Modificar curso"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_lightergreen"
                            android:padding="15dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="30dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/statistics"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                style="@style/styleTxtViewBotonesCurso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver estadísticas"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btnListadoClases"
                            android:layout_below="@+id/btnModificarCurso"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_middlerblue"
                            android:paddingHorizontal="35dp"
                            android:paddingVertical="15dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/info"/>

                            <TextView
                                style="@style/styleTxtViewBotonesCurso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Información del curso"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_below="@id/btnListadoClases"
                            android:layout_width="300dp"
                            android:layout_height="190dp"
                            android:background="#5c5c5c"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"/>

                    </RelativeLayout>


                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frgDetalles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>
</layout>