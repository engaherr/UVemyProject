<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_greenoutline"
            android:paddingHorizontal="18dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/imgViewMiniatura"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/black"
                android:padding="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgViewMiniatura"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bolditalic"
                android:text="Curso 1"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
</layout>