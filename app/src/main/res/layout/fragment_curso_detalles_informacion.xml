                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:background="@drawable/background_middlerblue"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            style="@style/styleTxtViewCampoDetallesCurso"
