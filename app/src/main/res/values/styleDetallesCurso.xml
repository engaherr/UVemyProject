<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleTxtViewTituloCurso">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginVertical">15dp</item>
    </style>

    <style name="styleTxtViewBotonesCurso">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/nunito_italic</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="styleTxtViewCampoDetallesCurso">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="styleTxtViewInfoDetallesCurso">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleEdtTextCamposDetallesCurso">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="styleScrViewCampoDetallesCurso">
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="styleLnrLayoutCampoDetallesCurso">
        <item name="android:background">@drawable/background_lightblue</item>
        <item name="android:layout_marginBottom">15dp</item>

    </style>

</resources>